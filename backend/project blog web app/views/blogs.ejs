<%- include("partials/header.ejs") %>

<h1 class="container body-heading">  <%= blog.title %> </h1>
<p class="container body-text"> <%= blog.text %> </p>

<h2 class="container body-heading next"> Edit the blog: </h2>
<form action="/blogs/<%= blog.id %>/edit" method="POST" class="container textbox">
    <div class="form-row">
        <h3>Enter new Title:</h3>
        <label for="title"></label>
        <input type="text" id="title" name="title" value="<%= blog.title %>" required>
    </div>
    <br/>
    <div class="form-row">
        <h3>Enter new Content:</h3>
        <label for="text"></label>
        <textarea id="text" name="text" rows="5" cols="50" required><%= blog.text %></textarea>
    </div>
    <br/>
    <button type="submit" class="save-box">Save Changes</button>
</form>


<%- include("partials/footer.ejs") %>
